<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Studmin" parent="Theme.Material3.Light">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/gainsboro</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/cyan_blue</item>
        <item name="colorSecondaryVariant">@color/blue_green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/white</item>
        <!--items On status bar -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- background -->
        <item name="android:colorBackground">@color/light_cultured</item>
        <item name="colorOnBackground">@color/black</item>
        <!-- navigation bar -->
        <item name="android:navigationBarColor">@color/eerie_black</item>
        <!-- action bar and bottom bar-->
        <item name="colorSurface">@color/white</item>
        <!-- text color bottom bar-->
        <item name="colorOnSurface">@color/eerie_black</item>
        <!--  active icon container bottom bar -->
        <item name="colorSecondaryContainer">@color/cyan_blue</item>
        <!-- unActive icon bottom bar-->
        <item name="colorOnSurfaceVariant">@color/onyx</item>
        <!-- active icon bottom bar -->
        <item name="colorOnSecondaryContainer">@color/eerie_black</item>



    </style>
</resources>